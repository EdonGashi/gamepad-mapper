<Window
    x:Class="GamepadMapper.Wpf.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:GamepadMapper.Wpf"
    xmlns:menus="clr-namespace:GamepadMapper.Menus"
    Title="MainWindow"
    Width="525"
    Height="350"
    AllowsTransparency="True"
    Background="Transparent"
    Focusable="False"
    IsTabStop="False"
    ResizeMode="NoResize"
    ShowInTaskbar="True"
    Topmost="True"
    WindowState="Maximized"
    WindowStyle="None"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=menus:IMenuController, d:IsDesignTimeCreatable=False}">
    <Grid Margin="40,60">
        <wpf:RadialMenu
            IsOpen="{Binding IsOpen}"
            PointerAngle="{Binding PointerAngle}"
            IsPointerVisible="{Binding IsPointerVisible}"
            HelpScreen="{Binding HelpScreen}"
            
            PointerWidth="{Binding PointerWidth}"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom" />
    </Grid>
</Window>

